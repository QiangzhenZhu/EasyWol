<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.a10835.easywol.activity.RegisterSMSActivity">
    <ImageView
        android:id="@+id/btn_back"
        android:src="@drawable/back"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    <TextView
        android:layout_marginTop="68dp"
        android:layout_marginLeft="38dp"
        android:text="输入验证码"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ver_code"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="38dp"
        android:text="@string/tv_ver_code_register_sms"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.a10835.easywol.view.PasswordView
        android:layout_marginTop="18dp"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38dp"
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:borderColor="@color/white"
        app:cursorColor="@color/white"
        app:cipherEnable="false"
        app:passwordLength="6"
        />

    <TextView
        android:id="@+id/btn_ref_get_sms"
        android:text="@string/tv_register_sms_next"
        android:gravity="center"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="38dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/bg_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
